{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/*.test.ts",
    "jest.config.js"
  ]
}
